<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Verse">

	<typeAlias alias="Verse" type="net.todd.biblestudy.db.Verse" />

	<resultMap id="VerseResult" class="Verse">
		<result property="verseId" column="V_ID" />
		<result property="text" column="V_TEXT" />
	</resultMap>

	<select id="getVerseById" parameterClass="int" resultClass="Verse">
		SELECT		V_ID 	as verseId,
					V_TEXT 	as text 
		FROM		VERSES
		WHERE		V_ID=#id#
	</select>

</sqlMap>