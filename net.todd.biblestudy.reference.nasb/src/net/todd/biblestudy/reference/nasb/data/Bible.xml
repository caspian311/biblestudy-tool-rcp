<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Verse">

	<typeAlias alias="BibleVerse" type="net.todd.biblestudy.reference.common.BibleVerse" />

	<resultMap id="bibleResult" class="BibleVerse">
		<result property="id" column="BIB_ID" />
		<result property="version" column="BIB_VERSION" />
		<result property="book" column="BIB_BOOK" />
		<result property="chapter" column="BIB_CHAPTER" />
		<result property="verse" column="BIB_VERSE" />
		<result property="text" column="BIB_TEXT" />
	</resultMap>

	<select id="keywordLookup" parameterClass="String" resultMap="bibleResult">
		SELECT		BIBLE.*
		FROM		BIBLE
		WHERE		BIB_TEXT like '%$value$%'
		ORDER BY	BIB_SEQUENCE_ID
	</select>
	
	<select id="referenceLookup" parameterClass="net.todd.biblestudy.reference.common.Reference" resultMap="bibleResult">
		SELECT		BIBLE.*
		FROM		BIBLE
		WHERE		BIB_BOOK like #book#
		AND			BIB_CHAPTER = #chapter#
		AND			BIB_VERSE = #verse#
		ORDER BY	BIB_SEQUENCE_ID
	</select>

</sqlMap>